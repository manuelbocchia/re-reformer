<%= form_with model: @user do |form|%>
  <div>
  <%= form.label :username%>
  <%= form.text_field :username, placeholder: "Enter your username" %>
  </div>
<div>
  <%= form.label :email%>
  <%= form.email_field :email, placeholder: "your@email.com" %>
</div>
<div>
  <%= form.label :password %>
  <%= form.password_field :password , placeholder: "secure password" %>
</div>
<div>
  <%= form.submit%>
</div>
<%end%>